{
  "expo": {
    "name": "WasteMeNot",
    "slug": "server",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/waste_me_not_logo.png",
    "scheme": "groceries-shopping-list",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.messiahraileycapstone.client",
      "infoPlist": {
        "NSFaceIDUsageDescription": "We use Face ID to provide secure and convenient sign-in to your account.",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        }
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/waste_me_not_logo.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.messiahraileycapstone.client",
      "permissions": [
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "POST_NOTIFICATIONS"
      ],
      "usesCleartextTraffic": true,
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/waste_me_not.png",
          "imageWidth": 200,
          "borderRadius": 30,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow $(PRODUCT_NAME) to use Face ID for secure authentication."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/adaptive_wmn_logo.png",
          "color": "#ffffff"
        }
      ],
      "expo-secure-store",
      "expo-sqlite",
      "expo-web-browser",
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "apiUrl": "https://capstoneproject-ii8z.onrender.com",
      "eas": {
        "projectId": "7bfe348f-3215-4eec-a3d7-2407d4ed839b"
      }
    }
  }
}